{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "command": "make",
            "type": "process",
            "args": [
                "all", "-j8"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "reveal": "always"
            },
            "group": "build"
        },
        {
            "label": "Launch Qemu",
            "type": "process",
            "command": "qemu-system-x86_64",
            "args": [
                "-smp", "2",
                "-m", "2G",
                "-monitor", "stdio",
                "-serial", "file:luaos.log",
                "-bios", "extern/ovmf-x64/OVMF.fd",
                "-cdrom", "build/bin/luaos.iso",
                "-boot", "d",
                "-s", "-S",
            ],
            "dependsOn": "Build",
        }
    ]
}
